            <title>Amoretti 75</title>     
            <author>Edmund Spenser</author>   
         </titleStmt>      
         <publicationStmt>       
            <date>1595</date>    
         </publicationStmt>       
         <sourceDesc default="false"><p/>   
         </sourceDesc>                     
      </fileDesc>  
