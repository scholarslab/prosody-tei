         <titleStmt>
            <title>Piano</title>
            <author>D.H. Lawrence</author>
         </titleStmt>
         <publicationStmt>
            <date>1918</date>
         </publicationStmt>
         <sourceDesc default="false"><p/>
         </sourceDesc>                         
      </fileDesc>
